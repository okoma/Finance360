<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_app_gradient"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llButton"
        android:layout_below="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Input Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/calc_card_white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <!-- Row 1: Current Price + Par Value -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <!-- Current Price -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/_4sdp">

                            <TextView
                                style="@style/CalcTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/currentprice"
                                android:drawableStart="@drawable/money_recive"
                                android:drawablePadding="5dp"
                                android:paddingBottom="2dp"
                                android:gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_calc_edittext">

                                <TextView
                                    android:id="@+id/txtCurrencyBondYield1"
                                    style="@style/CalcCurrencyText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="8dp"
                                    android:text="@string/dollar" />

                                <EditText
                                    android:id="@+id/etCurrentPrice"
                                    style="@style/CalcEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:maxLength="7" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Par Value -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_4sdp">

                            <TextView
                                style="@style/CalcTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/par"
                                android:drawableStart="@drawable/money_recive"
                                android:drawablePadding="5dp"
                                android:paddingBottom="2dp"
                                android:gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_calc_edittext">

                                <TextView
                                    android:id="@+id/txtCurrencyBondYield2"
                                    style="@style/CalcCurrencyText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="8dp"
                                    android:text="@string/dollar" />

                                <EditText
                                    android:id="@+id/etParValue"
                                    style="@style/CalcEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:maxLength="7" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2: Coupon Rate + Payment Frequency -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <!-- Coupon Rate -->
                        <LinearLayout
                            android:id="@+id/linearCouponrate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/_4sdp">

                            <TextView
                                style="@style/CalcTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/couponrate"
                                android:drawableStart="@drawable/ic_percentage"
                                android:drawablePadding="5dp"
                                android:paddingBottom="2dp"
                                android:gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_calc_edittext">

                                <EditText
                                    android:id="@+id/etCouponRate"
                                    style="@style/CalcEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:maxLength="5" />

                                <TextView
                                    style="@style/CalcCurrencyText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="8dp"
                                    android:text="@string/percentage" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Payment Frequency -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_4sdp">

                            <TextView
                                style="@style/CalcTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/paymentFre"
                                android:drawableStart="@drawable/calendar"
                                android:drawablePadding="5dp"
                                android:paddingBottom="2dp"
                                android:gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_calc_edittext">

                                <Spinner
                                    android:id="@+id/spinner"
                                    style="@style/CalcEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:padding="@dimen/_4sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 3: Years to Maturity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CalcTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/yearsto"
                            android:drawableStart="@drawable/calendar"
                            android:drawablePadding="5dp"
                            android:paddingBottom="2dp"
                            android:gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_calc_edittext">

                            <EditText
                                android:id="@+id/etYearsTo"
                                style="@style/CalcEditText"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:maxLength="4" />

                            <TextView
                                android:textColor="@color/colorWhite"
                                android:gravity="center_vertical"
                                android:background="@color/colorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:paddingHorizontal="12dp"
                                android:text="@string/yr" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Result Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/llResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/calc_card_white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Seamless Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_header"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/result"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Result Row: Current Yield + Yield to Maturity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:gravity="center_horizontal">

                            <!-- Current Yield -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:background="@drawable/bg_calc_result"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/currentyield"
                                    android:textColor="@color/calc_text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txtCurrentYield"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/calc_text_primary"
                                    android:textSize="18sp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>

                            <!-- Yield to Maturity -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/bg_calc_result"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/yieldto"
                                    android:textColor="@color/calc_text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txtYieldToMaturity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/calc_text_primary"
                                    android:textSize="18sp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calculated Explanation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bondYieldExplanationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/calc_card_white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:visibility="gone"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        style="@style/CalcTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explanation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/business_person"
                        android:drawablePadding="5dp"
                        android:paddingBottom="2dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/bondYieldExplanation"
                        style="@style/CalcTextDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/calc_card_white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        style="@style/CalcTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bond_yield_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/knowledge"
                        android:drawablePadding="5dp"
                        android:paddingBottom="2dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/bondYieldText"
                        style="@style/CalcTextDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llButton"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/banner1">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

<Button
            android:id="@+id/btnShare"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_calc_button"
            android:text="@string/share_result"
            android:visibility="visible"/>
<Button
            android:id="@+id/btnAddToPlanner"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_calc_button"
            android:text="@string/add_to_planner"
            android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>

<Button
            android:id="@+id/btnCalculate"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_calc_button"
            android:text="@string/calculate" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center" />

    </RelativeLayout>
</RelativeLayout>
