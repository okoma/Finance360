<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_8sdp">

        <TextView
            android:id="@+id/txtYear"
            style="@style/CalcTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="5dp"
            android:paddingBottom="2dp"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_calc_edittext">

            <TextView
                android:id="@+id/txtCurrencySymbolYear928173"
                style="@style/CalcCurrencyText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:text="@string/dollar" />

            <EditText
                android:id="@+id/etYear"
                style="@style/CalcEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/calc_primary_teal" />

            <ImageView
                android:id="@+id/remove"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/close"
                android:padding="@dimen/_12sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Remove year" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>