<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bg_finance_card_gradient_layered.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#0F172A"
                android:centerColor="#0F766E"
                android:endColor="#065F46"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Overlay gradient for depth -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#1A14B8A6"
                android:centerColor="#00FFFFFF"
                android:endColor="#1A10B981"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>