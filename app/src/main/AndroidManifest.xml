            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.RefinanceStatisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.AmortizationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.LoanAffordabilityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.RefinanceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.SimpleInterestStatisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.SimpleInterestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.CompoundStatisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.MortgageStatisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.CarLeaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.StatisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.i2medier.financialpro.activity.AutoLoanActivity"
            android:screenOrientation="portrait" />
